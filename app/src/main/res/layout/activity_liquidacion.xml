<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Liquidacion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:orientation="vertical"
        android:background="@drawable/font">

        <ImageView
            android:layout_width="430dp"
            android:layout_height="175dp"
            android:background="@drawable/back"/>

    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/custom_edittext_light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="24dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LiquidaciÃ³n"
                android:textAlignment="center"
                android:id="@+id/LoginText"
                android:textSize="28dp"
                android:textStyle="bold"
                android:textColor="@color/purple_light"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/custom_edittext_light"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

            <TextView
                android:id="@+id/nombresLiq"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="NombresHere"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textStyle="bold"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/cargosLiq"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="CargoHere"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textStyle="bold"
                android:padding="4dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/sueldoBaseLiq"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="BaseHere"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext_light"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cargosLiq"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/diasLiq"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="DiasHere"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext_light"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textStyle="bold"
                android:padding="4dp"/>

            <TextView
                android:padding="4dp"
                android:id="@+id/VDiaLiq"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="DiasVHere"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext_light"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/SubLiq"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="SubHere"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext_light"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/regresarLiq"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:backgroundTint="@color/purple"
            android:text="Salir"
            app:cornerRadius="10dp" />
    </RelativeLayout>

</LinearLayout>